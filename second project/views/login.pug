extends layout 


block content
    h1 Login
    form.form-group(method="POST",action="/users/login")
        
        .form-group
            label Username:
            input.form-control(name="username",type="text")
        .form-group
            label Password:
            input.form-control(name="password",type="password")

        input.btn.btn-primary.mt-5(type='submit',value='Login')