extends layout 


block content
    h1= data.title
    h5  written by #{author}
    p= data.body
    hr
    if user
        if user.id == data.author
            a.btn.btn-primary(href="/articles/edit/"+data._id) Edit
            a.btn.btn-danger.delete-article.ml-3(data-id=data._id,href="#") Delete